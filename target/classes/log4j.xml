<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN"
        "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     threshold="null" debug="null">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[flash]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="avatarAppender"
              class="org.apache.log4j.DailyRollingFileAppender"> <!-- <param name="Threshold" value="INFO" /> -->
        <param name="File" value="/data/applogs/flash/logs/avatar.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[flash]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="appAppender"
              class="org.apache.log4j.DailyRollingFileAppender"> <!-- <param name="Threshold" value="INFO" /> -->
        <param name="File" value="/data/applogs/flash/logs/app.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[flash]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="ibatisAppender"
              class="org.apache.log4j.DailyRollingFileAppender"> <!-- <param name="Threshold" value="INFO" /> -->
        <param name="File" value="/data/applogs/flash/logs/ibatis.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[flash]%d %-5p [%c] %m%n"/>
        </layout>
    </appender>


    <logger name="com.ibatis" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="ibatisAppender"/>
    </logger>
    <logger name="java.sql.Connection">
        <level value="INFO"/>
    </logger>
    <logger name="java.sql.PreparedStatement">
        <level value="INFO"/>
    </logger>


    <root>
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="appAppender"/>
    </root>
</log4j:configuration>